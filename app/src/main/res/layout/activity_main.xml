<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="- UI Basic View -"
        android:fontFamily="@font/agoda_bold"
        android:textColor="@color/pastelLavender"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/img_main"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Title" />

    <Button
        android:id="@+id/btn_gotoUiComponentSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:onClick="doAction"
        android:text="컴포넌트 사이즈 연습 페이지로 이동"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_gotoTextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doAction2"
        android:text="텍스트 뷰 연습 페이지로 이동"
        app:layout_constraintBottom_toTopOf="@id/btn_gotoUiComponentSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_gotoViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doAction3"
        android:text="레이아웃 연습 페이지로 이동"
        app:layout_constraintBottom_toTopOf="@id/btn_gotoTextViews"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_gotoFavAppScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doAction4"
        android:text="1주차 과제 페이지로 이동"
        app:layout_constraintBottom_toTopOf="@id/btn_gotoViews"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>